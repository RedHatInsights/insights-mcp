{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.RedHatInsights/insights-mcp",
  "title": "Red Hat Lightspeed MCP",
  "description": "Model Context Protocol server for Red Hat Lightspeed - advisor, image builder, inventory, and more",
  "version": "1.0.0",
  "homepage": "https://github.com/RedHatInsights/insights-mcp",
  "license": "Apache-2.0",
  "keywords": [
    "red-hat",
    "lightspeed",
    "insights",
    "advisor",
    "image-builder",
    "inventory",
    "remediations",
    "vulnerability",
    "security",
    "systems-management",
    "rhel"
  ],
  "maintainers": [
    {
      "name": "Florian Sch√ºller",
      "email": "fschulle@redhat.com"
    }
  ],
  "repository": {
    "url": "https://github.com/RedHatInsights/insights-mcp",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "oci",
      "identifier": "ghcr.io/redhatinsights/red-hat-lightspeed-mcp",
      "runtimeHint": "docker",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "LIGHTSPEED_CLIENT_ID",
          "description": "Red Hat Lightspeed Client ID for authentication",
          "isRequired": true,
          "isSecret": true
        },
        {
          "name": "LIGHTSPEED_CLIENT_SECRET",
          "description": "Red Hat Lightspeed Client Secret for authentication",
          "isRequired": true,
          "isSecret": true
        }
      ]
    }
  ],
  "icons": [
    {
      "src": "https://raw.githubusercontent.com/RedHatInsights/insights-mcp/main/claude_desktop/icon.png",
      "mimeType": "image/png"
    }
  ]
}
